    <script>
        // State Management
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        const counterElement = document.getElementById('slide-counter');
        const chapterItems = document.querySelectorAll('.chapter-item');
        const sidebar = document.getElementById('sidebar');

        // Initial Render
        updateUI();

        // Keyboard Event Listeners
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ' || e.key === 'Enter') {
                nextSlide();
            } else if (e.key === 'ArrowLeft') {
                prevSlide();
            }
        });

        // Navigation Functions
        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                updateUI();
            }
        } 

        function prevSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                updateUI();
            }
        }

        function jumpToChapter(chapterIndex) {
            // Find the first slide with this chapter data attribute
            const targetSlideIndex = Array.from(slides).findIndex(
                slide => slide.getAttribute('data-chapter') == chapterIndex
            );
            
            if (targetSlideIndex !== -1) {
                currentSlide = targetSlideIndex;
                updateUI();
            }
        }

        // UI Update Logic
        function updateUI() {
            // 1. Update Slide Visibility
            slides.forEach((slide, index) => {
                if (index === currentSlide) {
                    slide.classList.add('active');
                    
                    // Trigger Bar Chart Animation if on that slide
                    const bars = slide.querySelectorAll('.comp-bar');
                    if(bars.length > 0) {
                        // Reset width to trigger transition
                        bars.forEach(bar => {
                            const originalWidth = bar.style.width;
                            bar.style.width = '0';
                            setTimeout(() => {
                                bar.style.width = originalWidth;
                            }, 100);
                        });
                    }

                } else {
                    slide.classList.remove('active');
                }
            });

            // 2. Update Counter
            counterElement.innerText = `${currentSlide + 1}/${totalSlides}`;

            // 3. Update Sidebar Highlight
            const activeSlide = slides[currentSlide];
            const currentChapterIndex = activeSlide.getAttribute('data-chapter');
            
            chapterItems.forEach((item, index) => {
                if (index == currentChapterIndex) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }
    </script>
</body>
