    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const chapterItems = document.querySelectorAll('.chapter-item');
        const counterDisplay = document.getElementById('counter');

        function updateDisplay() {
            // Toggle slide visibility
            slides.forEach((slide, index) => {
                slide.style.display = (index === currentSlide) ? 'block' : 'none';
            });

            // Update Counter
            counterDisplay.innerText = `${currentSlide + 1}/${slides.length}`;

            // Highlight correct sidebar chapter
            const activeChapterId = slides[currentSlide].getAttribute('data-chapter');
            chapterItems.forEach(item => {
                if (item.getAttribute('data-chap-id') === activeChapterId) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }

        function goToSlide(index) {
            if (index >= 0 && index < slides.length) {
                currentSlide = index;
                updateDisplay();
            }
        }

        // Global Keyboard Listener
        window.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                if (currentSlide < slides.length - 1) {
                    e.preventDefault();
                    currentSlide++;
                    updateDisplay();
                }
            } else if (e.key === 'ArrowLeft') {
                if (currentSlide > 0) {
                    e.preventDefault();
                    currentSlide--;
                    updateDisplay();
                }
            }
        });

        // Initialize display
        updateDisplay();
    </script>
